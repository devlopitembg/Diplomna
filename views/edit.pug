extends _layout
block   content
    .container
        if errors
            each error, i in errors
                div(class="alert alert-danger") #{error.msg}
        h1=	"Edit"
        form(method='POST',	action='/edit')
            input(name='id', type="text", hidden="hidden", value=router.id)
            #form-group
                label=	"Name:"
                input.form-control(name='name',	type='text', value=router.name)
            #form-group
                label=	"Tag:"
                input.form-control(name='tag',	type='text', value=router.tag)
            #form-group
                label=	"Frequency:"
                input.form-control(name='frequency',	type='text', value=router.frequency)
            #form-group
                label=	"Standart:"
                input.form-control(name='standart',	type='text', value=router.standart)
            #form-group
                label=	"Range:"
                input.form-control(name='range',	type='text', value=router.range)
            #form-group
                label=	"Ports:"
                input.form-control(name='ports',	type='text', value=router.ports)
            #form-group
                label=  "Vlan:"
                input.form-control(name='vlan',	type='number', value=router.vlan)
            #form-group
                label=  "Antennas:"
                input.form-control(name='antennas', type='number', value=router.antennas)
            #form-group
                label=  "Manageability:"
                input.form-control(name='manageability',    type='text', value=router.manageability)
            #form-group
                label=  "Fans:"
                input.form-control(name='fans',	type='number', value=router.fans)
            #form-group
                label=	"Power:"
                input.form-control(name='power',	type='text', value=router.power)
            #form-group
                label=	"Plug:"
                input.form-control(name='plug',	type='text', value=router.plug)
            #form-group
                label=	"Price:"
                input.form-control(name='price',	type='text', value=router.price)
            br
            input.btn.btn-primary(type='submit',	value='Submit')